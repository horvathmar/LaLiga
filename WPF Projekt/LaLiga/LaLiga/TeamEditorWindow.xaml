<Window x:Class="LaLiga.TeamEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Csapat szerkesztése" Height="400" Width="300">
    <StackPanel Margin="10">
        <Label Content="Név:"/>
        <TextBox x:Name="txtName"/>

        <Label Content="Helyszín:"/>
        <ComboBox x:Name="cmbLocation"/>

        <Label Content="Stadion:"/>
        <TextBox x:Name="txtStadium"/>

        <Label Content="Alapítás dátuma:"/>
        <DatePicker x:Name="dpFoundation"/>

        <Label Content="Bajnoki címek:"/>
        <TextBox x:Name="txtTitles"/>

        <Label Content="Aktív La Liga-ban:"/>
        <CheckBox x:Name="chkActive"/>

        <Label Content="Van bajnoki címe?"/>
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="rbYes" Content="Igen" GroupName="HasTitles"/>
            <RadioButton x:Name="rbNo" Content="Nem" GroupName="HasTitles" Margin="10,0,0,0"/>
        </StackPanel>

        <Button Content="Mentés" Click="btnSave_Click" Margin="0,20,0,0"/>
    </StackPanel>
</Window>