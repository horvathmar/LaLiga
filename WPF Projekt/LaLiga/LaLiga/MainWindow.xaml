<!-- MainWindow.xaml -->
<Window x:Class="LaLiga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="La Liga Csapatok" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="ListBoxStyle" TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="400"/>
        </Style>

        <Style x:Key="DetailLabelStyle" TargetType="Label">
            <Setter Property="Margin" Value="0,3"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#007acc"/>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#28a745"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#dc3545"/>
        </Style>

        <Style x:Key="DetailContainerStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Bal oldali lista panel -->
        <Border Grid.Column="0" BorderBrush="#ddd" BorderThickness="0,0,1,0" Background="Beige">
            <StackPanel>
                <TextBlock Text="La Liga Csapatok" Style="{StaticResource HeaderStyle}"/>
                <ListBox x:Name="lstTeams" Background="WhiteSmoke" 
                         SelectionChanged="lstTeams_SelectionChanged" 
                         DisplayMemberPath="Name"
                         Style="{StaticResource ListBoxStyle}"/>
            </StackPanel>
        </Border>

        <!-- Jobb oldali részletek -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Csapat részletei" Style="{StaticResource SectionHeaderStyle}"/>

            <Border Style="{StaticResource DetailContainerStyle}" Background="WhiteSmoke">
                <StackPanel>
                    <Label x:Name="lblName" Content="Név: " FontWeight="SemiBold" Style="{StaticResource DetailLabelStyle}"/>
                    <Label x:Name="lblLocation" Content="Helyszín: " Style="{StaticResource DetailLabelStyle}"/>
                    <Label x:Name="lblStadium" Content="Stadion: " Style="{StaticResource DetailLabelStyle}"/>
                    <Label x:Name="lblFoundation" Content="Alapítás: " Style="{StaticResource DetailLabelStyle}"/>
                    <Label x:Name="lblTitles" Content="Bajnoki címek: " Style="{StaticResource DetailLabelStyle}"/>
                    <Label x:Name="lblActive" Content="Aktív: " Style="{StaticResource DetailLabelStyle}"/>
                    <Label x:Name="lblHasTitles" Content="Van címe: " Style="{StaticResource DetailLabelStyle}"/>
                </StackPanel>
            </Border>

            <StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Új hozzáadása" 
                        Click="btnAdd_Click" 
                        Style="{StaticResource AddButtonStyle}"/>
                <Button Content="Módosítás" 
                        Click="btnEdit_Click" 
                        Style="{StaticResource EditButtonStyle}"/>
                <Button Content="Törlés" 
                        Click="btnDelete_Click" 
                        Style="{StaticResource DeleteButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>