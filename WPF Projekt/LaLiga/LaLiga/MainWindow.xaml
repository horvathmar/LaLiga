<Window x:Class="LaLiga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="La Liga Csapatok" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lstTeams" Grid.Column="0" SelectionChanged="lstTeams_SelectionChanged" DisplayMemberPath="Name"/>

        <StackPanel Grid.Column="1" Margin="10">
            <Label Content="Csapat részletek:" FontWeight="Bold"/>
            <Label x:Name="lblName" Content="Név: "/>
            <Label x:Name="lblLocation" Content="Helyszín: "/>
            <Label x:Name="lblStadium" Content="Stadion: "/>
            <Label x:Name="lblFoundation" Content="Alapítás: "/>
            <Label x:Name="lblTitles" Content="Bajnoki címek: "/>
            <Label x:Name="lblActive" Content="Aktív: "/>
            <Label x:Name="lblHasTitles" Content="Van címe: "/>

            <Button Content="Új hozzáadása" Click="btnAdd_Click" Margin="0,20,0,0"/>
            <Button Content="Módosítás" Click="btnEdit_Click" Margin="0,10,0,0"/>
            <Button Content="Törlés" Click="btnDelete_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>