<Window x:Class="LaLiga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="La Liga Csapatok" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Bal oldali lista panel -->
        <Border Grid.Column="0" BorderBrush="#ddd" BorderThickness="0,0,1,0" Background="White">
            <StackPanel>
                <TextBlock Text="La Liga Csapatok" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="10" 
                           HorizontalAlignment="Center"/>
                <ListBox x:Name="lstTeams" 
                         SelectionChanged="lstTeams_SelectionChanged" 
                         DisplayMemberPath="Name"
                         BorderThickness="0"
                         Margin="10"
                         FontSize="14"
                         Height="400"/>
            </StackPanel>
        </Border>

        <!-- Jobb oldali részletek -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Csapat részletei" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <Border Background="White" 
                    Padding="15" 
                    CornerRadius="5" 
                    BorderBrush="#ddd" 
                    BorderThickness="1">
                <StackPanel>
                    <Label x:Name="lblName" Content="Név: " FontWeight="SemiBold"/>
                    <Label x:Name="lblLocation" Content="Helyszín: "/>
                    <Label x:Name="lblStadium" Content="Stadion: "/>
                    <Label x:Name="lblFoundation" Content="Alapítás: "/>
                    <Label x:Name="lblTitles" Content="Bajnoki címek: "/>
                    <Label x:Name="lblActive" Content="Aktív: "/>
                    <Label x:Name="lblHasTitles" Content="Van címe: "/>
                </StackPanel>
            </Border>

            <StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Új hozzáadása" 
                        Click="btnAdd_Click" 
                        Margin="5" 
                        Padding="15,5"
                        Background="#007acc"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Módosítás" 
                        Click="btnEdit_Click" 
                        Margin="5" 
                        Padding="15,5"
                        Background="#28a745"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Törlés" 
                        Click="btnDelete_Click" 
                        Margin="5" 
                        Padding="15,5"
                        Background="#dc3545"
                        Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>